{
  "manifest_version": 3,
  "name": "Impulse Shield",
  "version": "1.0",
  "description": "Block impulse buying and focus on savings goals.",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "impulse.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["blocker.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
